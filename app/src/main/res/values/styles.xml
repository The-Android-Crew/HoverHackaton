<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    ************************TextAppearance Styles*****************************          -->
    <style name="TextAppearance.Large.Primary" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/lora_bold</item>
    </style>

    <style name="TextAppearance.Large.Light" parent="TextAppearance.Large.Primary">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/lora</item>
    </style>

    <style name="TextAppearance.Small.Light" parent="TextAppearance.Large.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.Large.Secondary" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lora_bold</item>
    </style>

    <style name="TextAppearance.Text.Sub" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>


    <!--    ************************CardView Styles*****************************          -->
    <style name="MaterialCardView.Primary" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>
